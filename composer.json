{
    "name": "peertopark/composer-bower-bridge",
    "description": "Bower integration for Composer packages.",
    "keywords": ["composer", "bower", "package", "integration", "bridge", "plugin", "composer-plugin"],
    "homepage": "https://github.com/peertopark/composer-bower-bridge",
    "license": "MIT",
    "authors": [
        {
            "name": "hespert",
            "email": "hespert@peertopark.com",
            "homepage": "https://www.peertopark.com/"
        }
    ],
    "type": "composer-plugin",
    "require": {
        "php": ">=5.3",
        "composer-plugin-api": "^1",
        "eloquent/composer-npm-bridge": "dev-develop"
    },
    "require-dev": {
        "composer/composer": "^1",
        "eloquent/phony": "^0.8",
        "phpunit/phpunit": "^4"
    },
    "autoload": {
        "psr-4": {
            "Peertopark\\Composer\\BowerBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peertopark\\Composer\\BowerBridge\\": "test/"
        }
    },
    "extra": {
        "class": "Peertopark\\Composer\\BowerBridge\\BowerBridgePlugin"
    }
}
